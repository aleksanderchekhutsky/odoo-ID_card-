<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <template id="report_passport_pdf">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div>
                                <h2><span t-field="o.name"/> <span t-field="o.lastname"/></h2>
                            </div>
                            <div>
                                <p>CIT: <span t-field="o.cit"/></p>
                                <p>Gender: <span t-field="o.gender"/></p>
                                <p>Personal Number: <span t-field="o.personalnum"/></p>
                                <p>Birthday Date: <span t-field="o.birthdata"/></p>
                                <p>Place of Birth: <span t-field="o.placebirth"/></p>
                                <p>Issue : <span t-field="o.dateiss"/></p>
                                <p>Department: <span t-field="o.other"/></p>
                                <p>Hobbies: <span t-field="o.hobbies"/></p>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
</odoo>